{
	"name": "array-like",
	"version": "1.0.0",
	"description": "Template repo for building simple packages",
	"main": "dist/array-like.js",
	"module": "dist/array-like.modern.js",
	"source": "src/index.js",
	"scripts": {
		"test": "uvu -r esm tests",
		"bundle:prod": "microbundle -f modern,umd",
		"bundle:dev": "microbundle watch --compress=false -f modern,umd --raw=true --no-sourcemap",
		"clean:dist": "rm -rf dist",
		"start": "npm-run-all clean:dist bundle:dev",
		"build": "npm-run-all test clean:dist bundle:prod"
	},
	"keywords": [
		"subclass",
		"array-like",
		"typescript"
	],
	"author": {
		"name": "frankie",
		"url": "https://github.com/frankie-tech"
	},
	"license": "MIT",
	"devDependencies": {
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"microbundle": "^0.12.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"uvu": "^0.3.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"mangle": {
		"regex": "^_"
	}
}
